extends layout.pug

block hero
  section.hero.is-dark.is-bold
    .hero-body
      .container
        h1.title Octolion Shop
        h2.subtitle Find the best products at the best price

block content
  .container.main-content
    .columns.is-multiline
        each product in products
          .column.is-one-quarter
            .card
              .card-image
                figure.image.cover-figure
                  img.cover-image(src=product.image, alt=product.name)
              .card-content
                h1.title= product.name
                .button.is-fullwidth.is-primary
                  span.icon
                    i.fas.fa-shopping-cart
                  span Add to cart  
                    strong= `${product.price} USD`